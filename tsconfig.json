{
  "include": [
    "packages/**/lib/**/*.d.ts",
    "packages/functions/type-test.ts",
    "packages/app/type-test.ts",
    "packages/app-check/type-test.ts",
    "packages/auth/type-test.ts",
    "packages/crashlytics/type-test.ts",
    "packages/database/type-test.ts",
    "packages/firestore/type-test.ts",
    "packages/in-app-messaging/type-test.ts",
    "packages/installations/type-test.ts",
    "packages/messaging/type-test.ts",
    "packages/ml/type-test.ts",
    "packages/perf/type-test.ts",
    "packages/remote-config/type-test.ts",
    "packages/storage/type-test.ts"
  ],
  "compilerOptions": {
    "noEmit": true,
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "importHelpers": true,
    "jsx": "react-native",
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "lib": ["es2015", "es2016", "esnext", "dom"],
    "types": ["react-native", "node"],
    "paths": {
      "@react-native-firebase/*": ["./packages/*/lib/index.d.ts"]
    }
  },
  "exclude": ["node_modules", "**/*.spec.ts", "packages/**/dist"]
}
