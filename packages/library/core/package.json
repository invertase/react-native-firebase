{
  "name": "@react-native-firebase/core",
  "version": "6.0.0",
  "author": "Invertase <oss@invertase.io> (http://invertase.io)",
  "description": "React Native Firebase Core",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "genversion src/version.js & npm run build:src & npm run build:flow & wait",
    "build:src": "BABEL_ENV=publish babel src -d dist --ignore __tests__ --copy-files",
    "build:flow": "flow-copy-source -i */__tests__* src dist",
    "prepare": "rimraf dist/ && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/invertase/react-native-firebase/tree/master/packages/modules/core"
  },
  "license": "Apache-2.0",
  "keywords": [
    "react",
    "react-native",
    "firebase",
    "core"
  ],
  "peerDependencies": {
    "react": ">= 16.5.0",
    "react-native": ">= 0.57.0"
  },
  "dependencies": {
    "opencollective-postinstall": "^2.0.0"
  },
  "rnpm": {
    "android": {
      "buildPatch": "    implementation project(':react-native-firebase-core')",
      "packageImportPath": "import io.invertase.firebase.modules.core.ReactNativeCorePackage;",
      "packageInstance": "new ReactNativeCorePackage()"
    }
  },
  "collective": {
    "type": "opencollective",
    "url": "https://opencollective.com/react-native-firebase"
  }
}
