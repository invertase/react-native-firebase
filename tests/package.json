{
  "name": "react-native-firebase-tests",
  "version": "13.1.1",
  "private": true,
  "scripts": {
    "build:clean": "rimraf dist && rimraf android/build && rimraf android/app/build && rimraf android/.gradle && rimraf ios/build",
    "prepare": "patch-package"
  },
  "dependencies": {
    "@react-native-firebase/analytics": "13.1.1",
    "@react-native-firebase/app": "13.1.1",
    "@react-native-firebase/app-check": "13.1.1",
    "@react-native-firebase/app-distribution": "13.1.1",
    "@react-native-firebase/app-types": "6.7.2",
    "@react-native-firebase/auth": "13.1.1",
    "@react-native-firebase/crashlytics": "13.1.1",
    "@react-native-firebase/database": "13.1.1",
    "@react-native-firebase/dynamic-links": "13.1.1",
    "@react-native-firebase/firestore": "13.1.1",
    "@react-native-firebase/functions": "13.1.1",
    "@react-native-firebase/in-app-messaging": "13.1.1",
    "@react-native-firebase/installations": "13.1.1",
    "@react-native-firebase/messaging": "13.1.1",
    "@react-native-firebase/ml": "13.1.1",
    "@react-native-firebase/perf": "13.1.1",
    "@react-native-firebase/remote-config": "13.1.1",
    "@react-native-firebase/storage": "13.1.1",
    "postinstall-postinstall": "2.1.0",
    "react": "17.0.2",
    "react-native": "0.67.0-rc.5"
  },
  "devDependencies": {
    "@firebase/rules-unit-testing": "^2.0.1",
    "@react-native-firebase/private-tests-helpers": "0.0.13",
    "a2a": "^0.2.0",
    "babel-plugin-istanbul": "^6.0.0",
    "detox": "^19.3.1",
    "firebase": "^9.6.1",
    "firebase-tools": "^9.23.1",
    "jest-circus": "^27.4.4",
    "jest-environment-node": "^27.4.4",
    "jet": "^0.8.0",
    "jsonwebtoken": "^8.5.1",
    "metro-react-native-babel-preset": "0.66.2",
    "mocha": "^9.1.2",
    "nyc": "^15.0.1",
    "patch-package": "^6.4.7",
    "react-native-codegen": "^0.0.12",
    "react-native-port-patcher": "^1.0.4",
    "should": "^13.2.3",
    "should-sinon": "0.0.6",
    "sinon": "^12.0.1"
  },
  "detox": {
    "test-runner": "mocha",
    "specs": "e2e",
    "runner-config": "e2e/.mocharc.js",
    "configurations": {
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/testing.app",
        "build": "xcodebuild VALID_ARCHS=\"`uname -m`\"  CC=clang CPLUSPLUS=clang++ LD=clang LDPLUSPLUS=clang++ -workspace ios/testing.xcworkspace -scheme testing -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build -UseModernBuildSystem=YES",
        "type": "ios.simulator",
        "device": {
          "type": "iPhone 11"
        }
      },
      "ios.sim.release": {
        "binaryPath": "ios/build/Build/Products/Release-iphonesimulator/testing.app",
        "build": "export RCT_NO_LAUNCH_PACKAGER=true && xcodebuild  CC=clang CPLUSPLUS=clang++ LD=clang LDPLUSPLUS=clang++ -workspace ios/testing.xcworkspace -scheme testing -configuration Release -sdk iphonesimulator -derivedDataPath ios/build -UseModernBuildSystem=YES",
        "type": "ios.simulator",
        "device": {
          "type": "iPhone 11"
        }
      },
      "android.emu.debug": {
        "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
        "build": "cd android && ./gradlew assembleDebug assembleAndroidTest lintDebug -DtestBuildType=debug && cd ..",
        "type": "android.emulator",
        "device": {
          "avdName": "TestingAVD"
        }
      },
      "android.emu.release": {
        "binaryPath": "android/app/build/outputs/apk/release/app-release.apk",
        "build": "cd android && ./gradlew assembleRelease assembleAndroidTest -DtestBuildType=release && cd ..",
        "type": "android.emulator",
        "device": {
          "avdName": "TestingAVD"
        }
      }
    }
  }
}
