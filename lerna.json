{
  "npmClient": "yarn",
  "npmClientArgs": [
    "--no-lockfile"
  ],
  "packages": [
    "packages/*",
    "tests"
  ],
  "useWorkspaces": true,
  "command": {
    "version": {
      "allowBranch": "master",
      "conventionalCommits": true,
      "exact": true,
      "gitRemote": "origin",
      "message": "chore(release): release packages"
    }
  },
  "ignoreChanges": [
    "**/docs/**",
    "**/.github/**",
    "**/e2e/**",
    "**/tests/**"
  ],
  "version": "10.3.1"
}
