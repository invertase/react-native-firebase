{
  "npmClient": "yarn",
  "npmClientArgs": ["--no-lockfile"],
  "packages": ["packages/*", "tests"],
  "useWorkspaces": true,
  "command": {
    "version": {
      "conventionalCommits": true,
      "exact": true,
      "gitRemote": "origin",
      "message": "chore(release): publish [skip-ci]"
    }
  },
  "ignoreChanges": ["**/docs/**", "**/.github/**", "**/e2e/**", "**/tests/**"],
  "version": "independent"
}
